{{!-- title --}}
<div class="container">
    <div class="text-center">
        <h1>Eat Yo Burger!</h1>
        <img src="/assets/img/burger.png" alt="open-burger.png" class="burger-pic">
    </div>

    <div class="row">
        <div class="col">
            <h4 class="burger-title">Burgers Waiting to be Eaten</h4>
            <ol class="burger-to-eat">
                {{#each burgers}}
                    {{#unless devoured}}
                    <li class="lists">
                        {{burger_name}}
                        <button class="eat-burger btn btn-success" data-id="{{id}}" data-state="true">Eat!</button>
                    </li>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>

        <div class="col">
            <h4 class="burger-title">Burgers Devoured</h4>
            <ol class="burger-eaten">
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="lists">
                            {{burger_name}}
                            <button class="delete-burger btn btn-danger" data-id="{{id}}">Trash!</button>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <hr>
    <div class="text-center">
        <h4>Add a burger to eat later</h4>
        <form class="form create-form">
            <div class="form-group">
                <label for="burger-name">Burger Name: </label>
                <input class="burger-name" type="text">
                <button type="submit" class="add-burger btn btn-primary">Add Burger!</button>
            </div>
        </form>
    </div>
</div>